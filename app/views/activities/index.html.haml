- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row
      .col-md-3
        = render "layouts/system_search"
      .col-md-2
        = link_to "添加", new_activity_path, :class => "btn btn-info"
    .row.buyer-table-ctn
      .col-md-12
        %table.table.text-center.table-bordered.table-list-search
          %thead
            %tr
              %th #
            
              %th 
                = Setting.activities.title
              %th 
                = Setting.activities.content
              %th
          %tbody
            - @activities.each_with_index do |activity, index|
              %tr
                %td
                  = index+1
              
                %td
                  = activity.title
                %td
                  = activity.content
                %td
                  = link_to "查看", activity_path(activity), :class => "btn btn-primary btn-sm"
                  = link_to "编辑", edit_activity_path(activity), :class => "btn btn-success btn-sm"
                  = link_to "删除", activity, :method => :delete, :data => {:confirm => "确定删除当前角色吗?"}, :class => "btn btn-danger btn-sm"

= render "layouts/control_panel"
